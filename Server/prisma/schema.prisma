generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model User {
  id       Int       @id @default(autoincrement())
  username String
  email    String    @unique
  password String
  role     String    @default("user")
  tasks    Task[]
  sessions Session[]
}

model Session {
  id        Int      @id @default(autoincrement())
  name      String
  createdby String
  createdat DateTime @default(now())
  tasks     Task[]
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  priority    Priority  @default(Medium)
  status      Status    @default(Active)
  createdby   String
  createdat   DateTime  @default(now())
  session     Session?  @relation(fields: [sessionId], references: [id])
  sessionId   Int?
  user        User?     @relation(fields: [userId], references: [id])
  userId      Int?
}

enum Priority {
  Low
  Medium
  High
  Urgent
}

enum Status {
  Active
  In_Progress
  Resolved
}
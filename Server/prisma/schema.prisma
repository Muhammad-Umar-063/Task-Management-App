generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model User {
  id           Int        @id @default(autoincrement())
  username     String
  email        String     @unique
  password     String
  role         String     @default("user")
  tasks        Task[]
}

model Task {
  id          Int         @id @default(autoincrement())
  title       String 
  description String?
  priority    Priority    @default(Medium)
  status      Status      @default(Active)
  createdby   String 
  createdat   DateTime    @default(now())
  user        User?       @relation(fields: [userId], references: [id])
  userId      Int?
}

enum Priority {
  Low
  Medium
  High
  Urgent
}

enum Status {
  Active
  In_Progress
  Resolved
}